#task1.1
str1 = "ABRACADABRA"
index1 = str(str1.find('R'))
print("first R in index no:" + index1 )

#task1.2
str2 = "The quick brown fox jumps over the lazy dog"
sub = "brown fox"
length = len(sub)
start = (str2.find(sub))
end = start + length
print(str2[start: end])

